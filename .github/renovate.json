{
  "extends": [
    "config:js-app",
    ":gitSignOff",
    ":rebaseStalePrs",
    "group:allNonMajor",
    "default:pinDigestsDisabled",
    ":automergeBranch",
    ":disableMajorUpdates"
  ],
  "labels": [
    "kind/dependency upgrade"
  ],
  "npm": {
    "minimumReleaseAge": "3 day"
  },
  "pip_requirements": {
    "fileMatch": [
      "requirements.*\\.in"
    ]
  },
  "reviewers": ["team:rhdh-security"],
  "packageRules": [    
    {
      "description": "exclude rpm-lockfile updates",
      "matchFileNames": [".github/workflows/update-rpm-lockfile.yaml"],
      "enabled": false
    },
    {
      "matchCategories": [
        "python"
      ],
      "groupName": "python  ",
      "additionalBranchPrefix": "python ",
      "dependencyDashboardApproval": true,
      "description": "require dashboard approval for all python dependencies due to potential conflicts"
    },
    {
      "description": "disable docker digest updates",
      "matchCategories": [
        "docker"
      ],
      "digest": {
        "enabled": false
      }
    },   
    {
      "description": "Dockerfile non-major updates", 
      "matchDatasources": [
        "docker"
      ],
      "matchUpdateTypes": [
        "patch",
        "minor"
      ],      
      "matchFileNames": [
        ".rhdh/docker/Dockerfile",
        "docker/Dockerfile"
      ],        
      "additionalBranchPrefix": "dockerfile ",        
      "groupName": "Dockerfile images (non-major) [skip-build]",
      "automerge": true
    },  
    {
      "description": "Test Dockerfile non-major updates", 
      "matchDatasources": [
        "docker"
      ],
      "matchUpdateTypes": [
        "patch",
        "minor"
      ],      
      "matchFileNames": [
        ".ibm/images/**"
      ],         
      "additionalBranchPrefix": "test-dockerfile ",        
      "groupName": "Test dockerfile images (non-major)",
      "automerge": false
    },      
    {
      "matchDepTypes": [
        "devDependencies"
      ],
      "matchUpdateTypes": [
        "patch",
        "minor"
      ],
      "matchCurrentVersion": "!/^0/",
      "groupName": "DevDependencies (non-major)",
      "automerge": true
    },
    {
      "matchDepTypes": [
        "devDependencies"
      ],
      "matchUpdateTypes": [
        "major"
      ],
      "groupName": "DevDependencies "
    },
    {
      "description": "Patch dependency updates", 
      "matchDepTypes": [
        "dependencies",
        "peerDependencies"
      ],
      "groupName": "Dependencies (patch)",
      "matchUpdateTypes": [
        "patch"
      ]
    },
    {
      "description": "Minor dependency updates", 
      "matchDepTypes": [
        "dependencies",
        "peerDependencies"
      ],
      "groupName": "Dependencies (minor)",
      "matchUpdateTypes": [
        "minor"
      ]
    },    
    {
      "extends": [
        "packages:test"
      ],
      "matchUpdateTypes": [
        "patch",
        "minor"
      ],
      "matchCurrentVersion": "!/^0/",
      "groupName": "Test packages (non-major)",
      "automerge": true
    },
    {
      "extends": [
        "packages:linters"
      ],
      "matchUpdateTypes": [
        "patch",
        "minor"
      ],
      "matchCurrentVersion": "!/^0/",
      "groupName": "linters  (non-major)",
      "automerge": true
    },
    {
      "extends": [
        "monorepo:material-ui"
      ],
      "matchUpdateTypes": [
        "patch",
        "minor"
      ],
      "groupName": "material-ui (non-major)",
      "automerge": true
    },
    {
      "extends": [
        "monorepo:react"
      ],
      "matchUpdateTypes": [
        "patch",
        "minor"
      ],
      "groupName": "react (non-major)",
      "automerge": true
    },
    {
      "extends": [
        "monorepo:emotion"
      ],
      "matchUpdateTypes": [
        "patch",
        "minor"
      ],
      "groupName": "emotion (non-major)",
      "automerge": true
    },
    {
      "matchUpdateTypes": [
        "patch",
        "minor"
      ],
      "groupName": "types (non-major)",
      "matchPackageNames": [
        "@types/{/,}**"
      ]
    },
    {
      "extends": [
        "monorepo:opentelemetry-js"
      ],
      "matchUpdateTypes": [
        "patch"
      ],  
      "groupName": "opentelemetry-js (patch)",
      "automerge": false      
    },
    { 
      "description": "opentelemetry-js: disable minor updates",
      "enabled": false,
      "extends": [
        "monorepo:opentelemetry-js"
      ],
      "matchUpdateTypes": [
        "minor" 
      ], 
      "groupName": "opentelemetry-js",
      "automerge": false      
    },
    {
      "extends": [
        "monorepo:opentelemetry-js-contrib"
      ],
      "matchUpdateTypes": [
        "patch"
      ],  
      "groupName": "opentelemetry-js-contrib (patch)",
      "automerge": false      
    },
    { 
      "description": "opentelemetry-js-contrib: disable minor updates",
      "enabled": false,      
      "extends": [
        "monorepo:opentelemetry-js-contrib"
      ],
      "matchUpdateTypes": [
        "minor"
      ], 
      "groupName": "opentelemetry-js-contrib",
      "automerge": false      
    },    
    {
      "description": "disable minor updates for Winston",
      "matchPackageNames": [
        "winston"
      ],
      "enabled": false,
      "matchUpdateTypes": [
        "minor"
      ]
    },
    {
      "description": "disable minor updates for Zod",
      "matchPackageNames": [
        "zod"
      ],
      "enabled": false,
      "matchUpdateTypes": [
        "minor"
      ]
    },    
    {
      "description": "react-router-dom: group all dependencies",
      "matchPackageNames": [
        "react-router-dom"
      ],
      "matchDepTypes": [
        "dependencies",
        "peerDependencies",
        "devDependencies"
      ],
      "groupName": "all react-router-dom dependencies"
    },
    {
      "description": "Keep yarn updates separate",
      "matchDepNames": [
        "yarn"
      ],
      "groupName": "yarn updates"
    },    
    {
      "description": "ignore updates to all backstage updates and 3rd party plugins",
      "groupName": "Backstage packages",
      "dependencyDashboardApproval": true,
      "enabled": false,
      "matchPackageNames": [
        "/^@backstage//",
        "/^@backstage-community//",
        "/^@immobiliarelabs//",
        "/^@red-hat-developer-hub//",
        "/^@roadiehq//",
        "/^@pagerduty//",
        "/^@internal//"
      ]
    },
    {
      "description": "patch and minor updates for the janus cli",
      "groupName": "janus cli updates",
      "matchPackageNames": [
        "@janus-idp/cli"
      ],
      "matchDepTypes": [
        "dependencies",
        "peerDependencies",
        "devDependencies"
      ],
      "matchUpdateTypes": [
        "patch",
        "minor"
      ]      
    }
  ],
  "ignorePaths": [
    "**/dist-dynamic/**"
  ],
  "vulnerabilityAlerts": {
    "enabled": true,
    "addLabels": [
      "kind/security"
    ]
  },
  "osvVulnerabilityAlerts": true
}
